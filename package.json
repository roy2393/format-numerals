{
   "name": "format-numerals",
   "version": "0.0.0-development",
   "description": "Formatter to convert numbers into string with different configs",
   "main": "dist/index.js",
   "scripts": {
      "commit": "git-cz",
      "test": "jest --verbose --coverage",
      "prebuild": "rimraf dist",
      "build": "npm-run-all --parallel build:*",
      "build:main": "webpack --config webpack/webpack.config.main.js --color -p",
      "build:umd": "webpack --config webpack/webpack.config.umd.js --color -p",
      "semantic-release": "semantic-release"
   },
   "keywords": [
      "format",
      "numbers",
      "numerals"
   ],
   "files": [
      "src",
      "!__tests__"
   ],
   "author": "Rohit Roy",
   "license": "MIT",
   "dependencies": {},
   "devDependencies": {
      "source-map-loader": "^0.2.4",
      "awesome-typescript-loader": "^5.2.1",
      "@babel/preset-typescript": "^7.3.3",
      "@commitlint/cli": "^8.0.0",
      "@commitlint/config-conventional": "^8.0.0",
      "@types/jest": "^24.0.15",
      "babel-preset-es2015": "^6.24.1",
      "codecov": "^3.5.0",
      "commitizen": "^4.1.1",
      "cz-conventional-changelog": "^2.1.0",
      "husky": "^3.0.1",
      "jest": "^24.8.0",
      "npm-run-all": "^4.1.5",
      "rimraf": "^2.6.3",
      "semantic-release": "^15.13.18",
      "semantic-release-cli": "^5.1.1",
      "ts-jest": "^24.0.2",
      "ts-loader": "^6.0.4",
      "typescript": "^3.5.2",
      "webpack": "^4.35.0",
      "webpack-cli": "^3.3.5"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/roy2393/format-numerals.git"
   },
   "husky": {
      "hooks": {
         "pre-commit": "npm run test",
         "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
      }
   },
   "config": {
      "commitizen": {
         "path": "./node_modules/cz-conventional-changelog"
      }
   }
}
